<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
   
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    

  </head>

  <body>
    <header>
      <div class="container">
        <div class="header-wrapper clear">
          <div class="header-left">
            <h2><%= link_to("Tweet_app","/")%></h2>
          </div>
          <div class="header-right">
            <ul class="header-ul">
            <% if @current_user %>
              <li class="header-li">
                
                  <%= link_to(@current_user.name,"/user/#{@current_user.id}") %>
                
              </li>
              <li class="header-li">
                <p class="header-login"><%=link_to("新規投稿","/posts/#{@current_user.id}/new")%></p>
              </li>
              <li class="header-li">
                <p class="header-login"><%=link_to("投稿一覧","/posts/top")%></p>
              </li>
              <li class="header-li">
                <p class="header-login"><%=link_to("ユーザー一覧","/user/all")%></p>
              </li>
              <li class="header-li">
                <p class="header-login"><%=link_to("ログアウト","/user/logout",{method: :post})%></p>
              </li>
              
              <% else %>
              <li class="header-li">
                <p><%=link_to("tweet_appとは","/about")%></p>
              </li>
              <li class="header-li">
                <p class="header-login"><%=link_to("新規登録","/create_form")%></p>
              </li>
              <li class="header-li">
                <p class="header-login"><%=link_to("ログイン","/user/login_form")%></p>
              </li>
              
              
            <% end %>
            </ul>
          </div>

        </div>
      </div>
    </header>

  
    <%= yield %>
  </body>
</html>
